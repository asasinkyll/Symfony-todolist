{% extends 'base.html.twig' %}
{% block body %}
    <h2 class="margins-40px">Latest Todoes</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th style="width: 1%">Code</th>
            <th>To Do</th>
            <th>Do Date</th>
            <th style="width: 20%">Options</th>
        </tr>
        </thead>
        <tbody>
        {% for todo in todoes %}
        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.naem }}</td>
            <td>{{ todo.dueDate|date}}</td>
            <td>
                <a href="/todo/details/{{ todo.id }}" class="btn btn-success">View</a>
                <a href="/todo/edit/{{ todo.id }}" class="btn btn-primary">Edit</a>
                <a href="/todo/delete/{{ todo.id }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
